<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Style_Default" TargetType="Control">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>
    
    <Style x:Key="Style_Label" TargetType="Label"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="125"/>
    </Style>
    <Style x:Key="Style_InputText" TargetType="TextBox"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="250"/>
    </Style>
    <Style x:Key="Style_Select" TargetType="ComboBox"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="250"/>
    </Style>
</ResourceDictionary>